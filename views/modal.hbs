<style>
	#modal {
		position: absolute;
		width: 100%;
		height: 100%;
		display: none;
		background-color: #fff;
		z-index: 10000000000;
		top: 0;
		left: 0;
        text-align: center;
        padding-top: 100px;
	}

	#modal i {
		position: absolute;
		top: 20px;
		right: 25px;
		font-size: 35px;
		color: #000;
		background-color: transparent;
	}
    #form-errors {
        text-align: left;
    }
    #modal form, #form-errors {
        width: 80%;
        max-width: 320px;
        margin: 50px auto;
        background-color: transparent;
    }
    #modal form .input-wrapper{
        width: 100%;
        margin: 0 0 30px;
        text-align: left;
        background-color: inherit;
    }
    #modal form .input-wrapper.input-focus label{
        color: #108ee9;
    }
    label, input, h1, p, a {
        width: 100%;
        background-color: inherit;
    }
    h4 {
        font-family: 'Exo', sans-serif;
    }
    label, p, a {
        text-transform: uppercase;
        font-size: .75rem;
        letter-spacing: 2px;
        line-height: 1.1;
        font-weight: 700;
        color: #9a9fa7;
    }
    #form-errors p {
        color: #CC0000;
        margin: 5px 0;
        font-size: .85rem;
        text-transform: unset;
        letter-spacing: 1px;
        font-weight: 700;
    }
    input, textarea {
        height: 2.5rem;
        border: none;
        border-bottom: 1px solid #DFE3E7;
        padding: 5px 10px 5px 0;
        font-size: .95rem;
        font-weight: 500;
        line-height: 1.5;
    }
    input:focus, textarea:focus {
        border-color: #108ee9;
    }
	textarea {
		resize: none;
		height: 300px;
		width: 100%;
		background-color: transparent;
	}
    button {
        border-radius: 50px;
        width: 80%;
        max-width: 250px;
        margin: 50px auto 5px;
        color: #fcfcfc;
        padding: 15px 0;
        font-size: 1.1rem;
        line-height: 1.3;
        font-weight: 100;
        background-color: #0EADFF;
        height: 60px;
        border: 1px transparent;
    }
    #modal p, #modal a {
        color: #0EADFF;
        cursor: pointer;
    }

    #modal .inner, #modal .outer {
        border: 2px solid #0f0f0f;
        margin: 0 auto;
        background-color: transparent;
    }
    #modal .outer{
        padding: 3px;
        width: 150px;
        height: 170px;
    }

    #modal .inner{
        width: 140px;
        height: 160px;
        font-size: 2rem;
        text-align: center;
    }

    i, h4 {
        background-color: transparent;
        margin: 0 auto;
    }
    #signup-form {
        display: none;
    }
    #modal input:invalid {
        box-shadow:none
    }
</style>

<div id="modal">
	<i onclick="closeModal()" class="fas fa-times"></i>
	<div id="form-errors"></div>
	<form onclick="event.stopPropagation()" onsubmit="createAlbum(event)" id="new-album-form" class="album">	
		<div class="input-wrapper">
			<label for="name">Album</label>
			<input onfocus="inputFocus(event)" onblur="inputBlur(event)" type="text" id="album" name="album" required/>
		</div>
		<div class="input-wrapper">
			<label for="description">Description</label>
			<textarea onfocus="inputFocus(event)" onblur="inputBlur(event)" id="album-input-description" name="description" ></textarea>
		</div>		
		<button onclick="submitForm(event)">Create</button>
	</form>
</div>