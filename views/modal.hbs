<style>
	#modal {
		position: absolute;
		width: 100%;
		height: 100%;
		display: none;
		background-color: rgba(0,0,0,.65);
		z-index: 1000;
		top: 0;
		left: 0;
	}

	#modal i {
		position: absolute;
		top: 20px;
		right: 25px;
		font-size: 35px;
		color: #f0f0f0;
		background-color: transparent;
	}

	#modal .modal-content {
		width: 85%;
		max-width: 350px;
		background-color: #2f2f2f;
		border-radius: 5px;
		padding: 20px;
		position: absolute;
		top: 27%;
		left: 50%;
		transform: translateX(-50%);
		text-align: center;
	}
	#modal .modal-content input, #modal .modal-content textarea {
		resize: none;
		width: 95%;
		margin-top: 10px;
		border: none;
		border-radius: 2px;
		height: 300px;
		padding: 15px;
		font-size: 17px;
	}
	#modal .modal-content input {
		height: 40px;
	}
	#modal .modal-content input[type='submit'] {
		height: 45px;
		width: 70%;
		max-width: 150px;
		border: 2px solid #7f7f7f;
		border-radius: 3px;
		background-color: transparent;
		color: #f0f0f0;
		font-size: 18px;
		cursor: pointer;
		padding: 0;
	}
	#modal .modal-content input[type='submit']:hover {
		background-color: #7f7f7f;
		color: #0f0f0f;
	}
</style>

<div id="modal" onclick="closeModal()">
	<i onclick="closeModal()" class="fas fa-times"></i>
	<form onclick="event.stopPropagation()" onsubmit="createAlbum(event)" id="new-album-form" class="modal-content">	
		<input type="text" id="album-input-name" name="album-name" placeholder="Album Name" required/>
		<textarea id="album-input-description" name="album-description" placeholder="Album Description" required></textarea>
		<input type="submit" value="CREATE" />
	</form>
</div>