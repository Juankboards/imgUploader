<style>
    .user-info-form {
        background-color: #fcfcfc;
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        padding-top: 50px;
        text-align: center;
        padding-top: 100px;
    }
    .user-info-form form {
        width: 80%;
        max-width: 300px;
        margin: 100px auto;
        background-color: transparent;
    }
    .user-info-form form .input-wrapper{
        width: 100%;
        margin: 0 0 30px;
        text-align: left;
        background-color: inherit;
    }
    .user-info-form form .input-wrapper.input-focus label{
        color: #108ee9;
    }
    label, input, h1, p, a {
        width: 100%;
        background-color: inherit;
    }
    h4 {
        font-family: 'Exo', sans-serif;
    }
    label, p, a {
        text-transform: uppercase;
        font-size: .75rem;
        letter-spacing: 2px;
        line-height: 1.1;
        font-weight: 700;
        color: #9a9fa7;
    }
    input {
        height: 2.5rem;
        border: none;
        border-bottom: 1px solid #DFE3E7;
        padding: 5px 10px 5px 0;
        font-size: .95rem;
        font-weight: 500;
        line-height: 1.5;
    }
    input:focus {
        border-color: #108ee9;
    }
    input[type='submit'] {
        border-radius: 50px;
        width: 80%;
        max-width: 250px;
        margin: 50px auto 5px;
        color: #fcfcfc;
        padding: 15px 0;
        font-size: 1.1rem;
        line-height: 1.3;
        font-weight: 100;
        background-color: #0EADFF;
        height: 60px;
        border: 1px transparent;
    }
    p, a {
        color: #0EADFF;;
    }
    a:hover {
        border-bottom: 1px solid #108ee9;
    }
    .user-info-form .inner, .user-info-form .outer {
        border: 2px solid #0f0f0f;
        margin: 0 auto;
        background-color: transparent;
    }
    .user-info-form .outer{
        padding: 3px;
        width: 150px;
        height: 170px;
    }

    .user-info-form .inner{
        width: 140px;
        height: 160px;
        font-size: 2rem;
        text-align: center;
    }

    i, h4 {
        background-color: transparent;
        margin: 0 auto;
    }
</style>

<section>
	<div class="user-info-form">
        <div class="outer">
            <div class="inner">
                <i class="fab fa-mixcloud"></i>
                <h4>Image</h4>
                <h4>loader</h4>
            </div>
        </div>
        <form onsubmit="login">
            <div class="input-wrapper">
                <label for="username">Username or Email</label>
                <input onfocus="event.target.parentNode.className = 'input-wrapper input-focus'" onblur="event.target.parentNode.className = 'input-wrapper'" type="text" name="username" required>
            </div>
            <div class="input-wrapper">
                <label for="password">Password</label>
                <input onfocus="event.target.parentNode.className = 'input-wrapper input-focus'" onblur="event.target.parentNode.className = 'input-wrapper'" type="password" name="password" required>
            </div> 
            <input type="submit" value="Log In">       
            <p><a href="#">Create Account</a></p>
        </form>
	</div>
</section>