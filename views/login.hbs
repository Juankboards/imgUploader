<style>
    .user-info-form {
        background-color: #fff;
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    #form-errors {
        text-align: left;
    }
    .user-info-form .user-info-wrapper {
        width: 80%;
        max-width: 320px;
    }
    .user-info-form form, #form-errors {
        width: 100%;
        margin: 50px auto;
    }
    .user-info-form form .input-wrapper{
        width: 100%;
        margin: 0 0 30px;
        text-align: left;
    }
    .user-info-form form .input-wrapper.input-focus label{
        color: #108ee9;
    }
    label, input, h1, p, a {
        width: 100%;
    }
    h4 {
        font-family: 'Exo', sans-serif;
    }
    label, p, a {
        text-transform: uppercase;
        font-size: .75rem;
        letter-spacing: 2px;
        line-height: 1.1;
        font-weight: 700;
        color: #9a9fa7;
    }
    #form-errors p {
        color: #CC0000;
        margin: 5px 0;
        font-size: .85rem;
        text-transform: unset;
        letter-spacing: 1px;
        font-weight: 700;
    }
    input {
        height: 2.5rem;
        border: none;
        border-bottom: 1px solid #DFE3E7;
        padding: 5px 10px 5px 0;
        font-size: .95rem;
        font-weight: 500;
        line-height: 1.5;
    }
    input:focus {
        border-color: #108ee9;
    }
    button {
        border-radius: 50px;
        width: 80%;
        max-width: 250px;
        margin: 50px auto 5px;
        color: #fcfcfc;
        padding: 15px 0;
        font-size: 1.1rem;
        line-height: 1.3;
        font-weight: 100;
        background-color: #0EADFF;
        height: 60px;
        border: 1px transparent;
    }
    p, a {
        color: #0EADFF;
        cursor: pointer;
    }
    a:hover {
        border-bottom: 1px solid #108ee9;
    }
    .user-info-form .inner, .user-info-form .outer {
        border: 2px solid #0f0f0f;
        margin: 0 auto;
    }
    .user-info-form .outer{
        padding: 3px;
        width: 150px;
        height: 170px;
    }

    .user-info-form .inner{
        width: 140px;
        height: 160px;
        font-size: 2rem;
        text-align: center;
    }

    i, h4 {
        margin: 0 auto;
    }
    #signup-form {
        display: none;
    }
    section .user-info-form input:invalid {
        box-shadow:none
    }
</style>

<section>
	<div class="user-info-form">
        <div class="user-info-wrapper">
            {{!-- logo --}}
            <div class="outer">
                <div class="inner">
                    <i class="fab fa-mixcloud"></i>
                    <h4>File</h4>
                    <h4>loader</h4>
                </div>
            </div>
            <div id="form-errors"></div>
            {{!-- loging form --}}
            <form class="user">
                <div class="input-wrapper">
                    <label for="login-email">Email</label>
                    <input onfocus="inputFocus(event)" onblur="inputBlur(event)" type="email" name="email" required />
                </div>
                <div class="input-wrapper">
                    <label for="login-password">Password</label>
                    <input onfocus="inputFocus(event)" onblur="inputBlur(event)" type="password" name="password" minlength="6" required/>
                </div> 
                <button onclick="submitForm(event)">Log In</button>       
                <p><a onclick="toggleForm(event)">Create Account</a></p>
            </form>
            {{!-- signup form --}}
            <form id="signup-form" class="user">
                <div class="input-wrapper">
                    <label for="signup-email">Email</label>
                    <input onfocus="inputFocus(event)" onblur="inputBlur(event)" type="email" name="email" required/>
                </div>
                <div class="input-wrapper">
                    <label for="signup-password">Password</label>
                    <input onfocus="inputFocus(event)" onblur="inputBlur(event)" type="password" name="password" minlength="6" required/>
                </div> 
                <div class="input-wrapper">
                    <label for="repeat-password">Repeat Password</label>
                    <input onfocus="inputFocus(event)" onblur="inputBlur(event)" type="password" name="repeat password" minlength="6" required/>
                </div> 
                <button onclick="submitForm(event)">Sign Up</button>      
                <p><a onclick="toggleForm(event)">Log In</a></p>
            </form>
        </div>
	</div>
</section>